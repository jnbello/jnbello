    f = open(nombre_salida, 'w', newline='', encoding='utf-8')
    writer = csv.writer(f)
    df2 = df.set_index("Folio", drop=False)
    print_uso_equipo(anio_a_calcular, mes_a_calcular, nombre_mes[mes_a_calcular-1], tarifa_mes, df2, writer)
